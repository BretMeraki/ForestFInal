# ForestApp Environment Variables
# ===========================
# Copy this file to .env for local development
# For cloud deployment, set these variables in your platform dashboard

# ===== DEPLOYMENT MODE =====
USE_CLOUD_MODE=False  # Set to True for cloud deployment

# ===== DATABASE SETTINGS =====
# For localhost PostgreSQL setup
DB_CONNECTION_STRING=postgresql://postgres:your_password@localhost:5432/postgres

# ===== API KEYS =====
# Required for production
GOOGLE_API_KEY=your_api_key_here

# ===== SECURITY =====
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secure_key_here

# ===== CLOUD SPECIFIC SETTINGS =====
# Only needed when USE_CLOUD_MODE=True
GCP_SA_KEY=your_base64_encoded_service_account_key
SENTRY_DSN=your_sentry_dsn_here

# ===== ADVANCED SETTINGS =====
# Model configuration
GEMINI_MODEL_NAME=gemini-1.5-flash-latest
GEMINI_ADVANCED_MODEL_NAME=gemini-1.5-pro-latest
LLM_TEMPERATURE=0.7
